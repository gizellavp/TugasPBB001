<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.tugas01.xirpl4014.pendaftaranekstra1.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/imageView"
        android:src="@drawable/download"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/editTextNama"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNama"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RadioGrup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laki-laki"
            android:id="@+id/radioButtonLaki"
            android:checked="true"
            android:layout_alignTop="@+id/radioButtonPr"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:id="@+id/radioButtonPr"
            android:layout_below="@+id/editTextNama"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false" />
    </RadioGroup>

    <Spinner
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:entries="@array/kelas"
        android:id="@+id/spinner"
        android:layout_below="@+id/radioButtonLaki"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volly"
        android:id="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_above="@+id/checkBox6"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Futsal"
        android:id="@+id/checkBox3"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_above="@+id/checkBox2"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fiber Optik"
        android:id="@+id/checkBox4"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_above="@+id/checkBox5"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECC"
        android:id="@+id/checkBox5"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_above="@+id/checkBox3"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PMR"
        android:id="@+id/checkBox6"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_above="@+id/checkBox7"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basket"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/checkBox4"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paskibra"
        android:id="@+id/checkBox7"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/buttonOk"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewHasil" />

</LinearLayout>
</ScrollView>